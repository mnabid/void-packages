# Template file for 'vpm'
pkgname=vpm
version=1.3.1
revision=1
short_desc="XBPS package management helper for VoidLinux"
maintainer="Armin Jenewein <github@m2m.pm>"
license="GPL-3.0-or-later"
homepage="https://gitlab.com/mnabid/vpm"
distfiles="${homepage}/-/archive/${version}/${pkgname}-${version}.tar.gz"
checksum=ff054fd17944ba6c370de95cbd357d293a3074cde17f9d873f3aca60a776b2cc

do_install() {
	vbin vpm
	vcompletion completions/bash/_vpm bash
	vcompletion completions/zsh/_vpm zsh
}
